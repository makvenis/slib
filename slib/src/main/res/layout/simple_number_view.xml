<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- 默认状态 -->
    <LinearLayout
        android:id="@+id/mSimpleNumberViewLayoutA"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/simple_number_style_01"
        android:layout_width="100dp"
        android:layout_height="35dp">

        <!-- 数字为0状态 -->
        <TextView
            android:id="@+id/mSimpleNumberAddTxt"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/mSimpleNumberViewLayoutB"
        android:background="@drawable/simple_number_style_02"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/mSimpleNumberImageLeft"
            android:layout_weight="1"
            android:src="@drawable/icon_simple_number_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mSimpleNumberImageCenterTxt"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#e91e63"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/mSimpleNumberImageRight"
            android:layout_weight="1"
            android:src="@drawable/icon_simple_number_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>